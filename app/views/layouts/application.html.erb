<!DOCTYPE html>
<html>
  <head>
    <title>Spotifina</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <% if current_user %>
      <script>
        window.currentUser = {
          "id": "<%= current_user.id %>",
          "email": "<%= current_user.email %>",
          "username": "<%= current_user.username %>"
        };
        window.audiourl = "<%= audio_url("beez.mp3") %>";
      </script>
    <% end %>
    <%= favicon_link_tag asset_path('favicon.png') %>

  </head>

  <body>
    <%= yield %>
  </body>
</html>
